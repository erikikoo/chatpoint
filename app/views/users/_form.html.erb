<%= simple_form_for(user) do |f| %>
  <%= f.error_notification %>

    <%= f.input :username, input_html: { class: 'form-control' } %>
    <%= f.input :celular, input_html: { class: 'form-control' } %>
    <%= f.input :email, input_html: { class: 'form-control' } %>
    
    <%= f.input :nascimento, start_year: Date.today.year - 90,
                              end_year: Date.today.year,
                              order: [:day, :month, :year], input_html: { class: 'form-control' } %>
    <%= f.input :cidade, input_html: { class: 'form-control' } %>
    <%= f.input :bairro, input_html: { class: 'form-control' } %>    
    
    <%= f.collection_radio_buttons :sexo, [['m', 'Masculino'] ,['f', 'Feminino']], :first, :last, input_html: { class: 'form-control' } %>
    
    <%= f.input :password , input_html: { class: 'form-control' }%>
    <%= f.input :avatar, as: :file %>

  <div class="actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
