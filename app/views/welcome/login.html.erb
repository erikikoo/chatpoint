	<div class="col-sm-12">
	<%= simple_form_for("logar") do |f|%>
		<div class="form-inputs">
			<%= f.input :comercio, input_html: { class: 'form-control', autofocus: true } %> 
		</div>
		<div class="form-inputs">
			<%= f.input :password, input_html: { class: 'form-control' } %> 
		</div>
		<p class="">
			<%= raw("<div class='alert alert-danger text-center'> #{@error} </div>") unless @error.nil? %>			
		</p>
		<div class="text-right">
			<%= f.button :submit, "Logar", class: 'btn btn-success', placeholder: 'Senha' %>	
		</div>	
		
	<% end %>
</div>
	
</div>
