<section class="col-md-offset-3 col-md-6">
	<%= simple_form_for(@client, remote: true ,html: {multipart: true}) do |f| %>
		<%= f.input :cliente, input_html: { class: 'form-control'} %>
		<%= f.input :cidade, input_html: { class: 'form-control'} %>
		<%= f.input :bairro, input_html: { class: 'form-control'} %>
		<%= f.input :contato, input_html: { class: 'form-control'} %>
		<%= f.input :fone, input_html: { class: 'form-control'} %>
		<%= f.input :status, label: 'Ativo', required: false %>
		<%= f.input :url, input_html: { class: 'form-control'} %>
		<%= f.file_field(:logo, input_html: { class: 'form-control'}) %>
		<%= f.button :submit, input_html: { class: 'form-control'}, value: 'Gravar' %>
	<% end %>
</section>

<script>	
	$("#client_cliente1").blur(function(event) {
		var caminho = window.location.pathname;
		var client = $(this).val();
		var url = caminho+"/"+client;
		$("#client_url").attr('disabled','disabled')
		$("#client_url").val(url);
	});
</script>