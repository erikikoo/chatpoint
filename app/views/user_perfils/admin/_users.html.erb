<div class="option">
	<%= render partial: 'user_perfils/admin/menu_option'%>
</div>

<% if @user_perfil.nil? %>
	Você não possui usuários cadastrados
<% else %>
	<table class='table table-striped table-hover'>		
			<thead class='text-center'>
				<th>Cliente</th>
				<th>Cidade</th>
				<th>Bairro</th>				
				<th>Fone</th>
				<th>Idade</th>
				<th>Sexo</th>
				<th>Status</th>
				<th>Ações</th>
			</thead>
			<tbody>				
					<% @user_perfil.each do |user| %>						
						<tr >
							<td>Cliente</td>							
							<td><%= user.cidade %></td>	
							<td><%= user.bairro %></td>	
							<td><%= user.celular %></td>								
							<td>idade</td>															
							<td><%= user.sexo %></td>	
							<td><%= user.is_login %></td>	
							<td>
								<% if user.block %>
									<%= link_to 'Desbloquear',"/unblock/user/#{user.id}", 				        
								        remote: true,
								        data: { confirm: 'Deseja prosseguir?' } %>
								<% else %>
									<%= link_to 'Bloquear',"/block/user/#{user.id}", 				        
								        remote: true,
								        data: { confirm: 'Deseja prosseguir?' } %>
								<% end %>        
							</td>
						</tr>			
					<% end %>			
				
			</tbody>
	</table>
<% end %>